# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server port
PORT=3000

# MongoDB connection string (get from https://www.mongodb.com/cloud/atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vitalik-reader

# Ethereum RPC URL for ENS resolution (get from https://www.alchemy.com/)
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# Frontend URL for CORS
CORS_ORIGIN=http://localhost:5173

# Environment
NODE_ENV=development
